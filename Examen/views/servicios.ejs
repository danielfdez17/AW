<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario Nuevo Servicio</title>
    <%- include("../public/html/head.html") %>
</head>
<body>
    <div class="container text-center">
        <h1 class="text-center fw-bold">Lista de servicios</h1>
        <ol class="group-list mt-3">
            <% servicios.forEach(servicio => { %>
                <li class="group-list-item border border-black border-3 mb-3">
                    <%- include("./fragments/servicio.ejs", {nombre: servicio.nombre, descripcion: servicio.descripcion, precio: servicio.precio, foto: servicio.foto}) %>
                </li>
            <%});%>
        </ol>
        <%- include("./fragments/volver_al_formulario.ejs") %>
    </div>
    <%- include("../public/html/scripts.html") %>
</body>
</html>