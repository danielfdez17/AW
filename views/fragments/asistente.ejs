<div class="modal-body d-flex flex-column gap-2">

    <ul class="list-group">
        <% eventosInscritos.forEach(evento => { %>
            <div class="evento<%=evento.id %>">
                <li class="list-group-item">
                    <div id="eventoInscrito<%=evento.id%>">
                        <%- include('./evento.ejs', {evento: evento, index: false}) %>
                        <input type="hidden" name="evento" value="<%= evento %>">
                    </div>
                </li>
            </div>
        <% }); %>
    </ul>

</div>

<div class="modal-footer">
    <button id="cerrarEdicion" type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Cerrar ventana flotante" onclick="deshabilitarEdicion()">Cerrar</button>
</div>