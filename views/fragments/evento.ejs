<div class="card">
    <div class="card-body">

        <form id="formulario" action="organizadores/editar_evento" method="post">
            <p id="titulo" class="card-title text-center fw-bold fs-3"><%= evento.titulo %> </p>
            <p id="descripcion" class="card-text"><%= evento.descripcion %></p>
            <p id="fecha" class="card-text"><i class="bi bi-calendar-event me-2"></i><%= evento.fecha %></p>
            <p id="hora" class="card-text"><i class="bi bi-clock me-1"></i> <%= evento.hora %></p>
            <p id="ubicacion" class="card-text"><i class="bi bi-geo-alt me-2"></i><%= evento.ubicacion %></p>
            <% if (!index) { %>
                <% if (usuario.rol === "asistente") { %>
                    <button class="btn btn-primary mt-1 mb-1" type="button">Anular inscripci√≥n</button>
                <% } else { %>
                    <% if (evento.id_organizador === usuario.id) { %>
                        <div class="d-flex gap-1">
                            <button id="editarEvento<%= evento.id_organizador %>" class="btn btn-primary mt-1 mb-1" type="button" onclick="habilitarEdicion(<%= evento.id_organizador %>)">Editar</button>
                            <button id="guardarEvento<%= evento.id_organizador %>" class="btn btn-primary mt-1 mb-1 ocultar" type="button">Guardar</button>
                            <button id="cancelarEvento<%= evento.id_organizador %>" class="btn btn-secondary mt-1 mb-1 ocultar" type="button" onclick="deshabilitarEdicion(<%= evento.id_organizador %>)">Cancelar</button>
                            <button id="eliminarEvento<%= evento.id_organizador %>" class="btn btn-primary mt-1 mb-1" type="submit" onclick="eliminacion()">Eliminar</button>
                            <input type="hidden" name="id" value="<%= evento.id %>">
                        </div>
                    <% } %>
                <% } %>
            <% } %>
            <div class="card-footer mt-3">
                <p id="tipo_evento" class="card-text"><%= evento.tipo_evento %></p>
            </div>
        </form>

        <script src="/js/evento.js"></script>
    </div>
</div>